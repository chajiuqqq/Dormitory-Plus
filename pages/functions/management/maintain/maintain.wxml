<view id="swiper-tab">
    <view class="swiper-tab">
      <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="tabNav">{{first}}
        <i></i>
      </view>
      <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="tabNav" style="width:40%">{{second}}
        <i></i>
      </view>

    </view>
    <swiper current="{{currentTab}}" duration="1000" class="swiper-item" style='display:{{displays}}'>
      <swiper-item>
        <view>
          <view class='qiehuannier'>
            <view class="nav bc_white">
              <view class="{{selected?'red':'default'}}" bindtap="selected">教职工宿舍</view>
              <view class="{{selected1?'red':'default'}}" bindtap="selected1">女生园区</view>
              <view class="{{selected2?'red':'default'}}" bindtap="selected2">男生园区</view>
            </view>
            <view id="rights">
              <view class="{{selected?'show':'hidden'}}">
              <block wx:for="{{TeacherRoom}}">
                <view class="choice" data-num="1" bindtap="clickSum" data-name="{{item}}">{{item}}</view>
              </block>
              </view>

              <view class="{{selected1?'show':'hidden'}}">
              <block wx:for="{{GrilRoom}}">
                <view class="choice" data-num="1" bindtap="clickSum" data-name="{{item}}">{{item}}</view>
              </block></view>

              <view class="{{selected2?'show':'hidden'}}">
              <block wx:for="{{BoyRoom}}">
                <view class="choice" data-num="1" bindtap="clickSum" data-name="{{item}}">{{item}}</view>
              </block></view>
            </view>
          </view>
        </view>
      </swiper-item>
      <swiper-item>
        <view class="location_bottom" hidden="">
        <block wx:for="{{time}}">
          <view class="choice" data-num="{{item.index}}" bindtap="clickNum" data-name="{{item}}">{{item}}</view>
        </block>
        </view>
      </swiper-item>
     
    </swiper>
  </view>

<form>
<view class="con" >
  <view class="table">

<view class="th bg-g">
<view class="td" style="width:15%" >楼号</view>
<view class="td" style="width:15%">寝室号</view>
<view class="td" style="width:20%">报修时间</view>
<view class="td" style="width:45%">问题描述</view>
<view class="td" style="width:10%">是否修理</view>
</view>
<block wx:for="{{booklist}}" >    
      <view class="tr bg-w"  wx:if="{{index % 2 == 0}}">
      <view class="td" style="width:15%">{{item.BuildingNumber}}</view>
      <view class="td" style="width:15%">{{item.RoomNumber}}</view>
      <view class="td" style="width:20%">{{item.time}}</view>
      <view class="td" style="width:45%">{{item.problem}}</view>
      <view class="td" style="width:10%"><checkbox></checkbox></view>
      </view> 
      <view class="tr bg-g" wx:else >
      <view class="td" style="width:15%">{{item.BuildingNumber}}</view>
      <view class="td" style="width:15%">{{item.RoomNumber}}</view>
      <view class="td" style="width:20%">{{item.time}}</view>
      <view class="td" style="width:45%">{{item.problem}}</view>
      <view class="td" style="width:10%"><checkbox></checkbox></view>
      </view>
</block>
</view>
<button bindtap="f1" class="change-button" type="primary">更新已修理</button>
</view>
</form>
