.top{
  width: 700rpx;
  height: 80px;
  display: flex;
  flex-direction: row;
  border-bottom: solid gray 1px;
  margin:auto;
}

.headImage{
  width: 70px;
  height: 70px;
  margin-left: 15px;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
  border-radius: 50%;

}
.info{
  height: 100%;
  margin-left: 10px;
  padding-top: 10px;
}
.user-name{
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
  font-family: '微软雅黑';

}
.tag{
  padding: 3px;
  border-radius: 4px;
  background-color: lightblue;
  margin-right: 5px;
  color: grey;
  font-size: small;
}
.main{
  padding: 10px;
}
.price{
  color: red;
  font-size: larger;
  font-weight: bold;
  margin-left: 20px;
}
.post-title{
  margin-left: 30px;
}

.rich-text-container{
  width: 90%;
  padding: 20px;  
}

